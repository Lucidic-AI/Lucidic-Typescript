{
  "name": "lucidicai",
  "version": "1.0.2",
  "description": "Lucidic AI TypeScript SDK for LLM observability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:all",
    "test:openai": "ts-node tests/test_openai_comprehensive.ts",
    "test:anthropic": "ts-node tests/test_anthropic_comprehensive.ts",
    "test:all": "npm run test:openai && npm run test:anthropic",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "observability",
    "opentelemetry",
    "tracing"
  ],
  "author": "Lucidic AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lucidic-AI/Lucidic-Typescript.git"
  },
  "bugs": {
    "url": "https://github.com/Lucidic-AI/Lucidic-Typescript/issues"
  },
  "homepage": "https://github.com/Lucidic-AI/Lucidic-Typescript#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation": "^0.53.0",
    "@opentelemetry/resources": "^1.26.0",
    "@opentelemetry/sdk-trace-base": "^1.26.0",
    "@opentelemetry/sdk-trace-node": "^1.26.0",
    "@opentelemetry/semantic-conventions": "^1.27.0",
    "@traceloop/instrumentation-anthropic": "^0.11.0",
    "@traceloop/instrumentation-openai": "^0.11.0",
    "axios": "^1.7.2",
    "form-data": "^4.0.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "openai": "^4.104.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  }
}
